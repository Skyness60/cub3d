# Variables
NAME = libgarbage_descriptor.a
CC = cc -g3
CFLAGS = -Wall -Wextra -Werror

SRC = src/gd_add.c \
	src/gd_init.c \
	src/gd_clear.c \
	src/gd_utils.c

OBJECTS = $(SRC:.c=.o)

#################################################################################

# Couleurs pour l'affichage
RED = \033[0;31m
GREEN = \033[0;32m
YELLOW = \033[0;33m
BLUE = \033[0;34m
CYAN = \033[0;36m
NC = \033[0m

#################################################################################

OBJ = $(SRC:.c=.o)

# RÃ¨gle par dÃ©faut
all: $(NAME)

# Compilation des fichiers objets
%.o: %.c
	@echo "$(YELLOW)ðŸ”¨ Compiling $<...$(NC)"
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(GREEN)âœ… $< compiled!$(NC)"

# CrÃ©ation de l'exÃ©cutable
$(NAME): $(OBJ)
	@echo "$(BLUE)ðŸ”— Creating static library...$(NC)"
	@ar rcs $(NAME) $(OBJ)
	@echo "$(GREEN)âœ… $@ created!$(NC)"

clean:
	@echo "$(YELLOW)ðŸ—‘ï¸ Cleaning up object files...$(NC)"
	@rm -f $(OBJECTS)
	@echo "$(YELLOW)ðŸ—‘ï¸ $(OBJECTS) deleted!$(NC)"



fclean: clean
	@echo "$(RED)ðŸ—‘ï¸ Removing executable...$(NC)"
	@rm -rf $(NAME)
	@echo "$(GREEN)ðŸ—‘ï¸ $(NAME) deleted!$(NC)"

# Recompile tout
re: fclean all

.PHONY: re all clean fclean